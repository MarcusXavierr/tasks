{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 80,
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "overrides": [
    {
      "files": ["*.php"],
      "options": {
        "parser": "php",
        "tabWidth": 4
      }
    },
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "php",
        "tabWidth": 4
      }
    }
  ]
} 